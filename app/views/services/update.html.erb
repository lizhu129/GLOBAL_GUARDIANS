<div class="container">
  <h2>Create a new service</h2>
  <%= simple_form_for(@service) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, required: true, autofocus: true %>
      <%= f.input :description, required: true %>
      <%= f.input :category, collection: ["Host family", "Babysitter", "Playmate", "Other", "Advise", "Emotionnal support", "Day outing", "Night outing", "Weekend outing"] %>
      <%= f.input :price_per_day, required: true %>
      <%= f.input :min_service_day, required: true %>
      <%= f.input :active, as: :select, collection: [['Yes',true], ['No',false]], required: true %>
      <%= f.input :photo, as: :file, required: false %>

      <%= f.simple_fields_for :availability do |avail_form| %>
        <%= avail_form.input :start_date, label: 'Start date', as: :date, required: true %>
        <%= avail_form.input :end_date, label: 'End date', as: :date, required: true %>
        <%= avail_form.input :monday, as: :boolean, label: 'Monday', inline_label: 'Monday' %>
        <%= avail_form.input :tuesday, as: :boolean, label: 'Tuesday', inline_label: 'Tuesday' %>
        <%= avail_form.input :wednesday, as: :boolean, label: 'Wednesday', inline_label: 'Wednesday' %>
        <%= avail_form.input :thursday, as: :boolean, label: 'Thursday', inline_label: 'Thursday' %>
        <%= avail_form.input :friday, as: :boolean, label: 'Friday', inline_label: 'Friday' %>
        <%= avail_form.input :saturday, as: :boolean, label: 'Saturday', inline_label: 'Saturday' %>
        <%= avail_form.input :sunday, as: :boolean, label: 'Sunday', inline_label: 'Sunday' %>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Submit" %>
    </div>
  <% end %>
</div>






