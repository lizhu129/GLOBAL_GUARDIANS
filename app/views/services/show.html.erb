<div class="container">
  <%= link_to services_path do %>
    <button type="button" class="btn btn-light btn-sm my-3">↵ Services</button>
  <% end %>
  <h3><%= @service.name.capitalize %></h3>
  <div class="d-flex">
    <span class="mx-1">★ <%= rand(1.0..5.0).round(1) %></span>
    <span class="mx-1">·</span>
    <%= link_to services_path do %>
      <span class="mx-1 text-dark"><%= rand(10..100) %> reviews</span>
    <% end %>
    <span class="mx-1">·</span>
    <span class="mx-1"><span class="text-secondary">by</span> Username</span>
  </div>
  <div class="row">
    <div class="col-8 my-3">
      <p><%= @service.description %></p>
      <div class="d-flex align-items-stretch">
        <div class="card bg-light mb-3" style="max-width: 18rem;">
          <div class="card-header">Price</div>
          <div class="card-body">
            <h3 class="card-title"><%= @service.price_per_day %>€</h3>
            <p class="card-text">Cost per day for the service</p>
          </div>
        </div>
        <div class="card bg-light mb-3 mx-2" style="max-width: 18rem;">
          <div class="card-header">Minimum service day</div>
          <div class="card-body">
            <h3 class="card-title"><%= @service.min_service_day %></h3>
            <p class="card-text">Minimum number of days required for the services</p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4">
      <form>
        <div class="form-group mb-4">
          <label for="startDate">Start date</label>
          <input type="date" class="form-control" id="startDate" placeholder="Enter the starting date">
        </div>
        <div class="form-group my-4">
          <label for="endDate">End date</label>
          <input type="date" class="form-control" id="endDate" placeholder="Enter the ending date">
        </div>
        <div class="form-check my-4">
          <input type="checkbox" class="form-check-input" id="exampleCheck1">
          <label class="form-check-label" for="exampleCheck1">I agree with the terms and conditions</label>
        </div>
        <button type="submit" class="btn btn-primary">Book</button>
      </form>
    </div>
  </div>
</div>
